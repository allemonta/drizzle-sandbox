{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$types/*": ["src/types/*"],
      "$utils/*": ["src/utils/*"],
      "$components/*": ["src/components/*"],
      "$schemas/*": ["src/schemas/*"],
      "$services/*": ["src/services/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  }
}
